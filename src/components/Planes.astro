---

const pFamiliares=[
    {id:1,plan:"Familiar",mbps:700,ruta:"/src/assets/planes/router.svg",wsp:"https://rebrand.ly/kkupxki"},
    {id:2,plan:"Familiar",mbps:800,ruta:"/src/assets/planes/router.svg",wsp:"https://bit.ly/4jm9QZ3"},
    {id:3,plan:"Familiar",mbps:900,ruta:"/src/assets/planes/router.svg",wsp:"https://bit.ly/4i8AVhA"},
]

const pPremiun=[
    {id:1,plan:"Premiun",mbps:1000,router:1,ruta:"/src/assets/planes/router.svg",wsp:"https://bit.ly/3G1UxGL"},
    {id:2,plan:"Premiun",mbps:1000,router:2,ruta:"/src/assets/planes/router.svg",wsp:"https://bit.ly/4i4vMqN"},
]

const pilares=[
    {id:1,texto:"100% Fibra Óptica",img:"/src/assets/beneficios/fibra.svg"},
    {id:2,texto:"Internet Limitado y simétrico",img:"/src/assets/beneficios/simetrica.svg"},
    {id:3,texto:"Mayor velocidad",img:"/src/assets/beneficios/velocidad.svg"},
]



---

<div class="mt-10 mb-1 pt-10 pb-4 font-semibold">

    <div class="p-4 text-center">
        <h2 class="text-6xl font-bold text-orange-500">INSTALACIÓN GRATIS</h2>
        <h3 class="bg-blue-700 w-1/5 font-bold text-white rounded-3xl block m-auto mt-2">DUPLICAMOS TU VELOCIDAD POR 6 MESES</h3>
    </div>

    <div class="p-2 flex flex-wrap justify-center gap-5 mt-5" id="planclick">



        {pFamiliares.map((planF,index)=>(
            <div class="plancito" key={index}>
                <div id="btn" data-id={planF.id} class="border-2 border-orange-500 p-4 rounded-xl cursor-pointer hover:scale-102 hover:border-blue-600 hover:bg-gray-100 text-orange-600  hover:text-blue-600">

                    <img src={planF.ruta} alt="">
                    <div class="p-2 text-center font-semibold ">
                        <h3>Plan {planF.plan}</h3>
                        <h3>{planF.mbps} Mbps</h3>
                    </div>

                </div>
            </div>

        ))}

        {pPremiun.map((planP,index)=>(
            <div class="planes" key={index}>
                <div id="btnp" data-id={planP.id} class="border-2 border-orange-500 p-4 rounded-xl text-center cursor-pointer hover:scale-102 hover:border-blue-600 hover:bg-gray-100 text-orange-600 hover:text-blue-600" >
                    <img src={planP.ruta} alt="">

                    <div class="p-2 text-center font-semibold">
                        <h3>Plan {planP.plan}</h3>
                        <h3>{planP.mbps} Mbps</h3>
                    </div>
                    <div class="relative">
                        <span class="absolute bg-cyan-500 p-1.5 rounded-xl text-white flex justify-center left-4">+{planP.router} Router</span>
                    </div>
                </div>
            </div>

        ))}


    </div>

    <div class="hidden" id="contendorPlanes">

        <div class="flex justify-center p-4 text-center pt-12">

            <div class="rounded-3xl w-2/5 border-blue-700 border-4 p-4 shadow-xs shadow-black">

                <h1 class="text-4xl font-bold text-blue-700">100% Fibra</h1>
                <p class="text-3xl font-bold text-blue-700">Instalación Gratis</p>

                <div class="flex justify-center gap-6 p-4">

                    <div class="text-base/12 p-4 w-3/5 grid grid-cols-1 gap-2">
                        <p id="cantidadAnterior" class="line-through text-3xl">200 mbps</p>
                        <h2 id="cantidadActual" class="font-extrabold text-blue-700 text-6xl">400 Mbps</h2>
                        <p class="text-2xl">Duplica tu velocidad</p>
                        <p class="text-2xl">X6 meses</p>

                        <div class="block m-auto w-3/4">
                            <h2 id="precio" class="bg-orange-500 text-4xl p-2 rounded-3xl font-bold text-white w-full">S/70.00</h2>
                            <span class="bg-cyan-400 rounded-2xl p-2 text-white">Mensuales</span>
                        </div>


                    </div>

                    <div class="grid grid-cols-1 gap-4 p-4 w-1/2">

                        {pilares.map((itemPilares, index) => (
                            <div class="rounded-2xl p-2 w-full flex justify-center gap-3 border-2 border-orange-500" key={itemPilares.id || index}>
                            
                            <div class="p-2 flex justify-center w-2/5">
                                {/* Verifica que itemPilares.img exista antes de usarla */}
                                <img class="w-3/4" src={itemPilares.img || 'default-image.jpg'} alt={`Imagen de ${itemPilares.texto || 'Elemento'}`} />
                            </div>
                            
                            <div class="flex justify-center items-center p-2 text-blue-700">
                                <p>{itemPilares.texto || 'Texto no disponible'}</p>
                            </div>
                        
                            </div>
                        ))}
                        


                    </div>

                </div>


                <a href="" target="_blank" id="link">
                    <div class="block m-auto p-2 w-1/2 bg-blue-700 rounded-3xl shadow-2xs shadow-black cursor-pointer  hover:scale-105">
                        <h2 class="font-bold text-3xl text-white">Quiero este plan!!</h2>
                    </div>
                </a>


            </div>

        </div>

    </div>


</div>

<script src="/src/script/planes.js"></script>



