---
import "../styles/global.css";

const menu=[
    {id:1,nombre:"Planes",ruta:"/planes"},
    {id:2,nombre:"Cobertura",ruta:"/cobertura"},
    {id:3,nombre:"¿Por qué Fibra Óptica?",ruta:"/por-que-fibra-optica"},
    {id:4,nombre:"Blog de Tecnología",ruta:"/blog"},
    {id:5,nombre:"Consulta",ruta:"/contacto"},
    {id:6,nombre:"Nosotros",ruta:"/nosotros"},
]

const reclamos=[
    {id:1,nombre:"Solicitudes en línea",ruta:"/solicitudes"},
    {id:2,nombre:"Atención de Reclamos",ruta:"/atencion"},

]

const infoAbonados=[
    {id:1,nombre:"Condiciones de uso",ruta:""},
    {id:2,nombre:"Política de protección de datos",ruta:""},
    {id:3,nombre:"Preguntas frecuentes",ruta:""},
    {id:4,nombre:"Promociones",ruta:""},
]

const direcion="Urb. Santo Domingo 2da Etapa,Mz. L LT. 48 – Carabayllo,Lima";

const atencion="8:00 a 17:00 de Lunes a Sábados";

const correo="a@gmail.com"

---

<div class="flex justify-center w-full bg-gradient-to-r from-black to-blue-600  text-white p-2">

    <div class="xl:w-3/5 xl:flex block justify-center text-justify gap-4 w-full">

        <div class="">
            <img class="w-full size-80 xl:h-full h-36 block m-auto p-2" src="/logos/fiberpro.svg" alt="">
        </div>

        <div class="p-2 w-full">

            <h4 class="font-bold border-b-4">Menú</h4>

            <div class="text-base/6 mt-2">
                {menu.map((items)=>(
                    
                    <li class="list-none">
                        <a class="" href={items.ruta}>{items.nombre}</a>
                    </li>
                    
                ))}
            </div>


            <h4 class="border-b-4 font-bold mt-2">Atención de Reclamos y Solicitudes en Línea</h4>

            <div class="text-base/6 mt-2">

                {reclamos.map((itemsReclamos)=>(

                    <li class="list-none">
                        <a class="" href={itemsReclamos.ruta}>{itemsReclamos.nombre}</a>
                    </li>

    
                ))}
                
            </div>

        </div>

        <div class="p-2 w-full">

            <h4 class="border-b-4 font-bold">Información de usuarios y abonados</h4>

            <div class="text-base/6 mt-3">
                {infoAbonados.map((abonados)=>(
                    <li class="list-none">
                        <a class="" href={abonados.ruta}>{abonados.nombre}</a>
                    </li>
                ))}
            </div>

        </div>

        <div class="xl:w-3/4 w-full block lg:flex flex-col justify-around p-2">

            <div class="">
                <h4 class="border-b-4 font-bold mt-5">Dirección</h4>

                <div class="text-base/6 mt-2">
                    <p class="">{direcion}</p>
                </div>
            </div>

            <div class="">
                <h4 class="border-b-4 font-bold mt-5">Horario de atención</h4>

                <div class="text-base/6 mt-2">
                    <p class="">{atencion}</p>
                </div>

                <h4 class="border-b-4 font-bold mt-5">Email</h4>

                <p class="mt-2">{correo}</p>

            </div>



        </div>

        <div class="block m-auto">
            <img class="xl:w-full w-2/5 block m-auto p-2" src="https://portal.mtc.gob.pe/images/logo.png" alt="">
        </div>

    </div>


</div>