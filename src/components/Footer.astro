---
import "../styles/global.css";

const menu=[
    {id:1,nombre:"Planes",ruta:"/planes"},
    {id:2,nombre:"Cobertura",ruta:"/cobertura"},
    {id:3,nombre:"¿Por qué Fibra Óptica?",ruta:"/por-que-fibra-optica"},
    {id:4,nombre:"Blog de Tecnología",ruta:"/blog"},
    {id:5,nombre:"Consulta",ruta:"/contacto"},
    {id:6,nombre:"Nosotros",ruta:"/nosotros"},
]

const reclamos=[
    {id:1,nombre:"Solicitudes en línea",ruta:"/solicitudes"},
    {id:2,nombre:"Atención de Reclamos",ruta:"/atencion"},

]

const infoAbonados=[
    {id:1,nombre:"Condiciones de uso",ruta:""},
    {id:2,nombre:"Política de protección de datos",ruta:""},
    {id:3,nombre:"Preguntas frecuentes",ruta:""},
    {id:4,nombre:"Promociones",ruta:""},
]

const direcion="Urb. Santo Domingo 2da Etapa,Mz. L LT. 48 – Carabayllo,Lima";

const atencion="8:00 a 17:00 de Lunes a Sábados";

const correo="a@gmail.com"

---

<div class="flex justify-center w-full bg-blue-700 text-white p-2">

    <div class="w-3/5 flex justify-around gap-5">

        <div class="p-2">
            <img class="w-3/4 p-2 size-62 block m-auto" src="/src/assets/logos/fiberpro.svg" alt="">
        </div>

        <div class="w-3/4 p-2">

            <h4 class="font-bold border-b-4 text-black">Menú</h4>

            <div class="text-base/6">
                {menu.map((items)=>(
                    
                    <li class="list-none">
                        <a class="font-semibold hover:text-black" href={items.ruta}>{items.nombre}</a>
                    </li>
                    
                ))}
            </div>


            <h4 class="border-b-4 font-bold text-black">Atención de Reclamos y Solicitudes en Línea</h4>

            <div class="text-base/6">

                {reclamos.map((itemsReclamos)=>(

                    <li class="list-none">
                        <a class="font-semibold hover:text-black" href={itemsReclamos.ruta}>{itemsReclamos.nombre}</a>
                    </li>

    
                ))}
                
            </div>



        </div>

        <div class="w-3/4">

            <h4 class="border-b-4 font-bold text-black">Información de usuarios y abonados</h4>

            <div class="text-base/6">
                {infoAbonados.map((abonados)=>(
                    <li class="list-none">
                        <a class="font-semibold hover:text-black" href={abonados.ruta}>{abonados.nombre}</a>
                    </li>
                ))}
            </div>

        </div>

        <div class="w-3/4">

            <div>
                <h4 class="border-b-4 font-bold text-black">Dirección</h4>

                <div class="text-base/6">
                    <p class="font-semibold">{direcion}</p>
                </div>
            </div>

            <div>
                <h4 class="border-b-4 font-bold text-black mt-5">Horario de atención</h4>

                <div class="text-base/6">
                    <p class="font-semibold">{atencion}</p>
                </div>

                <h4 class="border-b-4 font-bold text-black mt-5">Email</h4>

                <p class="font-semibold">{correo}</p>

            </div>



        </div>

        <div class="w-3/4">
            <img src="https://portal.mtc.gob.pe/images/logo.png" alt="">
        </div>

    </div>


</div>