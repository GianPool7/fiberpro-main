---
import "../styles/global.css";

const accesos=[
    {id:1,nombreAccesos:"Informacion de abonados y usuarios",ruta:""},
    {id:2,nombreAccesos:"Nosotros",ruta:""},
    {id:3,nombreAccesos:"Fibra Óptica",ruta:""},
]

const menu=[
    {id:1,nombre:"Inicio",ruta:"/"},
    {id:2,nombre:"Planes",ruta:"/planes"},
    {id:3,nombre:"Formas de pago",ruta:"/formas-pagos"},
    {id:4,nombre:"Cobertura",ruta:"/cobertura"},
    {id:5,nombre:"Contacto",ruta:"/contacto"},
]

const redesSociales=[
    {id:1,icono:"/redes/fb.svg",vinculo:""},
    {id:2,icono:"/redes/ig.svg",vinculo:""},
    {id:3,icono:"/redes/yt.svg",vinculo:""},
    {id:4,icono:"/redes/tiktok.svg",vinculo:""},
    {id:5,icono:"/redes/tw.svg",vinculo:""},
    {id:6,icono:"/redes/dc.svg",vinculo:""},
]

---

<div class="bg-gradient-to-r from-black to-blue-600 sticky top-0 z-10">

    <div class="w-full flex justify-center">

        <div class="xl:w-3/4 w-full p-2">

            <div class="flex justify-around">

                <div class="xl:flex hidden flex-wrap justify-around gap-2 w-1/3 items-center">
        
                    <!-- Aquí generamos los accesos de forma dinámica -->
                    {accesos.map((aDirecto) => (
                        <a class="block text-white hover:text-orange-500" href={aDirecto.ruta}>
                            {aDirecto.nombreAccesos}
                        </a>
                    ))}
        
                </div>
        
                <div class="flex justify-center xl:w-1/3 xl:h-8 h-16 gap-6 p-2 w-full">
                    <!-- Aquí generamos las redes sociales de forma dinámica -->
                    <div class="flex justify-around gap-4 items-center">
                       {redesSociales.map((redes) => (
                           <a class="block" href={redes.vinculo}>
                               <img class="xl:size-6 size-8" src={redes.icono} alt="">
                           </a>
                       ))}
                    </div>

                    <div class="xl:flex hidden justify-center items-center">
                        <a class="bg-orange-400 text-white p-1 rounded-xs" href="/sede-inca">Ver sede inca</a>
                    </div>

                    <div class="xl:hidden flex justify-center items-center p-2">
                        <a href="tel:(01) 418-7185">
                            <img class="size-44" src="/logos/call.svg" alt="">
                        </a>
                    </div>

                </div>
        
            </div>
        </div>

    </div>
        
    <div class="bg-white p-1 w-full flex xl:justify-center justify-between h-20 shadow-2xl">
        
        <div class="xl:w-2/3 w-full justify-between p-4 flex xl:justify-around text-2xl font-bold text-blue-700 ">

            <div class="xl:w-1/6 flex xl:justify-center justify-between items-center">
                <a href="/" class="xl:w-5/6">
                    <img class="block m-auto xl:w-auto w-1/2" src="/logos/AZUL.svg" alt="">
                </a>

            </div>

            <div class="flex">
                {/* ICONO PARA ABRIR */}
                <button class="xl:hidden flex justify-center items-center" id="btnResponsivo">
                    <img class="p-2 size-18" src="/public/hamburguesa/menu-hamburguesa.svg" alt="" id="hamburguesa">
                </button>

                {/* PARA CERRAR  */}
                <button class="hidden justify-center items-center" id="cerrar-hamburguesa">
                    <img class="p-2 size-18" src="/public/hamburguesa/X.svg" alt="" id="cerrarH">
                </button>
            </div>


            <div class="w-3/5 xl:flex hidden justify-around items-center">
                {menu.map((item)=>(
                    <a class="no-underline hover:text-orange-500 hover:underline" href={item.ruta}>{item.nombre}</a>
                ))}
            </div>


            <div class="xl:flex hidden justify-center items-center">
                <a href="tel:(01) 418-7185">
                    <img class="size-55 p-2 block m-auto" src="/logos/call.svg" alt="">
                </a>
            </div>

        </div>
        
    </div>
    

    <div class="bg-linear-to-r from-blue-600 to-black hidden" id="menuResponsivo">
        {menu.map((item)=>(
            <div class="hover:text-orange-500 text-center p-2">
                <a class="no-underline text-2f text-white" href={item.ruta}>{item.nombre}</a>
            </div>
        ))}
    </div>

</div>

<script src="/src/script/menu.js"></script>