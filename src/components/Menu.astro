---
import "../styles/global.css";

const accesos=[
    {id:1,nombreAccesos:"Informacion de abonados y usuarios",ruta:""},
    {id:2,nombreAccesos:"Nosotros",ruta:""},
    {id:3,nombreAccesos:"Fibra Óptica",ruta:""},
]

const menu=[
    {id:1,nombre:"Inicio",ruta:"/"},
    {id:2,nombre:"Planes",ruta:"/planes"},
    {id:3,nombre:"Formas de pago",ruta:"/formas-pagos"},
    {id:4,nombre:"Cobertura",ruta:"/cobertura"},
    {id:5,nombre:"Contacto",ruta:"/contacto"},
]

const redesSociales=[
    {id:1,icono:"/redes/fb.svg",vinculo:""},
    {id:2,icono:"/redes/ig.svg",vinculo:""},
    {id:3,icono:"/redes/yt.svg",vinculo:""},
    {id:4,icono:"/redes/tiktok.svg",vinculo:""},
    {id:5,icono:"/redes/tw.svg",vinculo:""},
    {id:6,icono:"/redes/dc.svg",vinculo:""},
]

---

<div class="bg-yellow-300 sticky top-0 z-10">


    <div class="bg-linear-to-r from-blue-600 to-black w-full flex justify-center">

        <div class="w-3/4 p-2">

            <div class="flex justify-around">

                <div class="flex flex-wrap justify-around gap-2 w-1/3 items-center">
        
                    <!-- Aquí generamos los accesos de forma dinámica -->
                    {accesos.map((aDirecto) => (
                        <a class="block text-white hover:text-orange-500" href={aDirecto.ruta}>
                            {aDirecto.nombreAccesos}
                        </a>
                    ))}
        
                </div>
        
                <div class="flex justify-center w-1/3 gap-6">
                    <!-- Aquí generamos las redes sociales de forma dinámica -->
                    <div class="flex justify-around gap-4 items-center">
                       {redesSociales.map((redes) => (
                           <a class="block" href={redes.vinculo}>
                               <img class="size-6" src={redes.icono} alt="">
                           </a>
                       ))}
                    </div>

                    <div class="flex">
                        <a class="bg-orange-400 text-white p-2 rounded-xs" href="/sede-inca">Ver sede inca</a>
                    </div>

                </div>
        
            </div>
        </div>

    </div>
        
    <div class="bg-white p-1 w-full flex justify-center h-20 shadow-2xl">
        
        <div class="w-2/3 p-4 flex justify-around text-2xl font-bold text-blue-700">

            <div class="w-1/6 flex justify-center items-center">
                <a href="/">
                    <img class="w-4/5 block m-auto" src="/logos/AZUL.svg" alt="">
                </a>
            </div>

            <div class="w-3/5 flex justify-around items-center">
                {menu.map((item)=>(
                    <a class="no-underline hover:text-orange-500 hover:underline" href={item.ruta}>{item.nombre}</a>
                ))}
            </div>


            <div class="flex justify-center items-center">
                <a href="tel:+(01) 418-7185">
                    <img class="size-55 p-2 block m-auto" src="/logos/call.svg" alt="">
                </a>
            </div>



        </div>
        
    </div>
    

</div>

